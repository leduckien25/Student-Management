@model Student

<form method="post" action="/home/edit" enctype="multipart/form-data" class="form-container">
    <div>
        <label>Student ID:</label>
        <input type="text" name="StudentId" value="@Model.StudentId" readonly />
    </div>
    <br />

    <div>
        <label>Name:</label>
        <input type="text" name="Name" placeholder="Enter Name" value="@Model.Name" />
    </div>
    <br />

    <div>
        <label>Gender:</label>
        <input type="radio" name="Gender" value="true" @(Model.Gender ? "checked" : "") />
        <label>Male</label>
        <input type="radio" name="Gender" value="false" @(!Model.Gender ? "checked" : "") />
        <label>Female</label>
    </div>
    <br />

    <div>
        <label>Date of Birth:</label>
        <input type="date" name="DateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
    </div>
    <br />

    <div>
        <label>GPA:</label>
        <input type="number" step="0.01" name="GPA" placeholder="Enter GPA" value="@Model.GPA" />
    </div>
    <br />

    <div>
        <label>Current Image:</label><br />
        <input type="hidden" name="imageUrl" value="@Model.imageUrl" />

        @if (!string.IsNullOrEmpty(Model.imageUrl))
        {
            <img src="/images/@Model.imageUrl" alt="Student Image" width="100" style="margin-top: 10px;" />
        }
        else
        {
            <p><em>No image available</em></p>
        }
        <br />

        <label>Change Image:</label>
        <input type="file" name="image" accept="image/*" />
    </div>
    <br />

    <button type="submit" class="submit-btn">Update</button>
</form>
